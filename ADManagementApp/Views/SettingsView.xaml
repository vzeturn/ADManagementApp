<Window x:Class="ADManagementApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Settings" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Cog" Width="32" Height="32" 
                                        VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Settings" 
                          Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                          FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Configure Active Directory connection" 
                      Style="{StaticResource MaterialDesignBody2TextBlock}"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Connection Settings -->
                <materialDesign:Card Padding="20" Margin="0,0,0,15" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Active Directory Connection" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Domain -->
                        <TextBox materialDesign:HintAssist.Hint="Domain (e.g., yourdomain.local)"
                                x:Name="DomainTextBox"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>

                        <!-- Username -->
                        <TextBox materialDesign:HintAssist.Hint="Username (e.g., DOMAIN\Administrator)"
                                x:Name="UsernameTextBox"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>

                        <!-- Password -->
                        <PasswordBox materialDesign:HintAssist.Hint="Password"
                                    x:Name="PasswordBox"
                                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                    Margin="0,0,0,15"/>

                        <!-- Test Connection Button -->
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                               x:Name="TestConnectionButton"
                               Click="TestConnectionButton_Click"
                               HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TestTube" VerticalAlignment="Center"/>
                                <TextBlock Text="Test Connection" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Connection Status -->
                        <Border x:Name="ConnectionStatusBorder" 
                               Margin="0,15,0,0"
                               Padding="10"
                               CornerRadius="4"
                               Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon x:Name="ConnectionStatusIcon"
                                                        Width="20" Height="20"
                                                        VerticalAlignment="Center"/>
                                <TextBlock x:Name="ConnectionStatusText"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Application Settings -->
                <materialDesign:Card Padding="20" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Application Settings" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Theme Selection -->
                        <TextBlock Text="Theme" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ThemeComboBox"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 Margin="0,0,0,15"
                                 SelectedIndex="0">
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                        </ComboBox>

                        <!-- Auto Refresh -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <CheckBox x:Name="AutoRefreshCheckBox"
                                     Content="Auto-refresh data"
                                     IsChecked="True"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="every" Margin="10,0,5,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="RefreshIntervalTextBox"
                                    Text="30"
                                    Width="50"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="seconds" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Page Size -->
                        <TextBlock Text="Page Size (items per page)" Margin="0,0,0,5"/>
                        <TextBox x:Name="PageSizeTextBox"
                                Text="100"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                   Content="Cancel"
                   x:Name="CancelButton"
                   Click="CancelButton_Click"
                   Margin="0,0,10,0"/>
            
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                   Content="Save"
                   x:Name="SaveButton"
                   Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
