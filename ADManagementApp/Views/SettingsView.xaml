<UserControl x:Class="ADManagementApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Settings" 
                      Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                      FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Configure Active Directory connection (Secure Credential Storage)" 
                      Style="{StaticResource MaterialDesignBody2TextBlock}"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Credential Status Card -->
                <materialDesign:Card Padding="20" Margin="0,0,0,15" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="🔐 Credential Status" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,5">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="❌ No credentials stored"/>
                                        <Setter Property="Foreground" Value="#F44336"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasStoredCredentials}" Value="True">
                                                <Setter Property="Text" Value="✅ Credentials stored securely"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stored At:" FontWeight="SemiBold" Margin="0,5"
                                      Visibility="{Binding HasStoredCredentials, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                      Text="{Binding CredentialsStoredAt, StringFormat='dd/MM/yyyy HH:mm:ss', FallbackValue='Never'}"
                                      Margin="0,5"
                                      Visibility="{Binding HasStoredCredentials, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Connection:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ConnectionStatus}" Margin="0,5">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnectionSuccessful}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- Stored Credential Actions -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0"
                                   Visibility="{Binding HasStoredCredentials, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                   Command="{Binding ValidateStoredCredentialsCommand}"
                                   Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckCircle" VerticalAlignment="Center"/>
                                    <TextBlock Text="Validate Stored Credentials" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                   Command="{Binding LoadStoredCredentialsCommand}"
                                   Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Download" VerticalAlignment="Center"/>
                                    <TextBlock Text="Load Stored Info" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                   Command="{Binding DeleteCredentialsCommand}"
                                   Foreground="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete Credentials" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Configure Credentials Card -->
                <materialDesign:Card Padding="20" Margin="0,0,0,15" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="⚙️ Configure AD Connection" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Domain -->
                        <TextBox Text="{Binding Domain, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Domain (e.g., corp.haier.com)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>

                        <!-- Username -->
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Username (e.g., DOMAIN\Administrator)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>

                        <!-- Password -->
                        <PasswordBox x:Name="PasswordBox"
                                    materialDesign:HintAssist.Hint="Password"
                                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                    Margin="0,0,0,15"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>

                        <!-- Default OU -->
                        <TextBox Text="{Binding DefaultOU, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Default OU (Optional)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,15"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding TestConnectionCommand}"
                                   Margin="0,0,10,0"
                                   Background="{DynamicResource SecondaryHueMidBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TestTube" VerticalAlignment="Center"/>
                                    <TextBlock Text="Test Connection" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding SaveCredentialsCommand}"
                                   Background="{DynamicResource PrimaryHueMidBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center"/>
                                    <TextBlock Text="Save Credentials Securely" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Security Notice -->
                        <Border Background="#FFF3E0" 
                               Padding="15"
                               CornerRadius="4"
                               Margin="0,15,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="ShieldCheck" 
                                                            Width="24" Height="24"
                                                            Foreground="#FF9800"
                                                            VerticalAlignment="Top"/>
                                    <TextBlock Text="🔒 Security Notice" 
                                              FontWeight="Bold"
                                              Margin="10,0,0,0"
                                              Foreground="#FF9800"/>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Your credentials are stored securely using "/>
                                    <Run Text="Windows Credential Manager" FontWeight="Bold"/>
                                    <Run Text=". They are encrypted at the operating system level and can only be accessed by this application running under your Windows account."/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
                                    <Run Text="✅ Credentials are "/>
                                    <Run Text="NEVER" FontWeight="Bold"/>
                                    <Run Text=" stored in configuration files"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                    <Run Text="✅ Credentials are "/>
                                    <Run Text="NEVER" FontWeight="Bold"/>
                                    <Run Text=" sent over the network"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                    <Run Text="✅ Only "/>
                                    <Run Text="YOU" FontWeight="Bold"/>
                                    <Run Text=" can access your stored credentials"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Loading Overlay -->
                <Border Background="#F5F5F5" 
                       Padding="40"
                       CornerRadius="8"
                       Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0" IsIndeterminate="True"
                                    Width="60" Height="60"/>
                        <TextBlock Text="{Binding BusyMessage}" 
                                  Margin="0,15,0,0" 
                                  FontSize="16"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>