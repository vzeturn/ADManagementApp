<Window x:Class="ADManagementApp.Views.UserDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="User Details" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="User Details" 
                  Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                  Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SamAccountName}" Margin="0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DisplayName}" Margin="0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EmailAddress}" Margin="0,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding StatusText}" Margin="0,5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Department:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Department}" Margin="0,5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Title:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Title}" Margin="0,5"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Phone:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding PhoneNumber}" Margin="0,5"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Last Logon:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding LastLogonText}" Margin="0,5"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Groups:" FontWeight="Bold" Margin="0,5" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding GroupsText}" TextWrapping="Wrap" Margin="0,5"/>

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Description:" FontWeight="Bold" Margin="0,5" VerticalAlignment="Top"/>
                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click" 
                Style="{StaticResource MaterialDesignRaisedButton}" 
                HorizontalAlignment="Right" Margin="0,20,0,0"/>
    </Grid>
</Window>