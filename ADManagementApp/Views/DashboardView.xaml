<UserControl x:Class="ADManagementApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="StatCard" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
            <Setter Property="Height" Value="150"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Dashboard" Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                      FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Overview of your Active Directory domain" 
                      Style="{StaticResource MaterialDesignBody2TextBlock}"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Border Grid.Row="1"
               Background="#80000000" 
               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
               Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0" IsIndeterminate="True"
                            Width="60" Height="60"
                            Foreground="White"/>
                <TextBlock Text="Loading dashboard data..." Foreground="White" 
                          Margin="0,10,0,0" FontSize="16"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Statistics Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Users Card -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource StatCard}"
                                        Background="{DynamicResource PrimaryHueLightBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:PackIcon Grid.Row="0" Kind="AccountGroup" 
                                                    Width="40" Height="40"
                                                    Foreground="White" 
                                                    HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="1" 
                                      Text="{Binding Stats.TotalUsers, FallbackValue=0, TargetNullValue=0}"
                                      FontSize="36" FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Text="Total Users"
                                      FontSize="14" Foreground="White"
                                      Opacity="0.9"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Enabled Users Card -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource StatCard}"
                                        Background="#4CAF50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:PackIcon Grid.Row="0" Kind="AccountCheck" 
                                                    Width="40" Height="40"
                                                    Foreground="White" 
                                                    HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="1" 
                                      Text="{Binding Stats.EnabledUsers, FallbackValue=0, TargetNullValue=0}"
                                      FontSize="36" FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Text="Enabled Users"
                                      FontSize="14" Foreground="White"
                                      Opacity="0.9"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Disabled Users Card -->
                    <materialDesign:Card Grid.Column="2" Style="{StaticResource StatCard}"
                                        Background="#FF9800">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:PackIcon Grid.Row="0" Kind="AccountOff" 
                                                    Width="40" Height="40"
                                                    Foreground="White" 
                                                    HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="1" 
                                      Text="{Binding Stats.DisabledUsers, FallbackValue=0, TargetNullValue=0}"
                                      FontSize="36" FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Text="Disabled Users"
                                      FontSize="14" Foreground="White"
                                      Opacity="0.9"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Total Groups Card -->
                    <materialDesign:Card Grid.Column="3" Style="{StaticResource StatCard}"
                                        Background="#9C27B0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:PackIcon Grid.Row="0" Kind="AccountMultiple" 
                                                    Width="40" Height="40"
                                                    Foreground="White" 
                                                    HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="1" 
                                      Text="{Binding Stats.TotalGroups, FallbackValue=0, TargetNullValue=0}"
                                      FontSize="36" FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Text="Total Groups"
                                      FontSize="14" Foreground="White"
                                      Opacity="0.9"/>
                        </Grid>
                    </materialDesign:Card>
                </Grid>

                <!-- Domain Information -->
                <materialDesign:Card Margin="10" Padding="20" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Domain Information" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Domain Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Domain Name:"
                                      FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                      Text="{Binding Stats.DomainName, FallbackValue='Not connected', TargetNullValue='Not connected'}"
                                      Margin="0,5"/>

                            <!-- Domain Controller -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Domain Controller:"
                                      FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                      Text="{Binding Stats.DomainController, FallbackValue='N/A', TargetNullValue='N/A'}"
                                      Margin="0,5"/>

                            <!-- Connection Status -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Connection Status:"
                                      FontWeight="SemiBold" Margin="0,5"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                <materialDesign:PackIcon Kind="Circle" 
                                                        Width="12" Height="12"
                                                        VerticalAlignment="Center">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Stats}" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                <TextBlock Margin="10,0,0,0" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Stats}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="Disconnected"/>
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Text" Value="Connected"/>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quick Actions -->
                <materialDesign:Card Margin="10" Padding="20" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Margin="0,0,10,0" 
                                   Command="{Binding RefreshCommand}"
                                   ToolTip="Refresh dashboard data">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                                    <TextBlock Text="Refresh Data" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Margin="0,0,10,0"
                                   Command="{Binding CreateUserCommand}"
                                   Background="{DynamicResource PrimaryHueMidBrush}"
                                   BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                   ToolTip="Create a new user">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountPlus" VerticalAlignment="Center"/>
                                    <TextBlock Text="Create User" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding CreateGroupCommand}"
                                   Background="{DynamicResource SecondaryHueMidBrush}"
                                   BorderBrush="{DynamicResource SecondaryHueMidBrush}"
                                   ToolTip="Create a new group">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountMultiplePlus" VerticalAlignment="Center"/>
                                    <TextBlock Text="Create Group" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- User Status Distribution -->
                <materialDesign:Card Margin="10" Padding="20" UniformCornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="User Status Distribution" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Height="150">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Enabled Percentage -->
                            <Border Grid.Column="0" Margin="10">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="36" FontWeight="Bold"
                                              Foreground="#4CAF50"
                                              HorizontalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0:F1}%">
                                                <Binding Path="Stats.EnabledPercentage" FallbackValue="0" TargetNullValue="0"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="Enabled" 
                                              Style="{StaticResource MaterialDesignBody1TextBlock}"
                                              HorizontalAlignment="Center"
                                              Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Disabled Percentage -->
                            <Border Grid.Column="1" Margin="10">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="36" FontWeight="Bold"
                                              Foreground="#FF9800"
                                              HorizontalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0:F1}%">
                                                <Binding Path="Stats.DisabledPercentage" FallbackValue="0" TargetNullValue="0"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="Disabled" 
                                              Style="{StaticResource MaterialDesignBody1TextBlock}"
                                              HorizontalAlignment="Center"
                                              Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
