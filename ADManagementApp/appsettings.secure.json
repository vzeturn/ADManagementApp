{
  "ActiveDirectory": {
    "Domain": "corp.haier.com",
    "DefaultOU": "OU=Comp_HEV,OU=690 Oversea,OU=haier_corp,DC=corp,DC=haier,DC=com",
    "ConnectionTimeout": 30,
    "UseSecureCredentialStorage": true
  },
  "Application": {
    "Theme": "Light",
    "AutoRefreshInterval": 30,
    "PageSize": 100,
    "EnableAuditLog": true,
    "MaxSearchResults": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760,
      "RollOnFileSizeLimit": true
    }
  },
  "Performance": {
    "EnableCaching": true,
    "CacheDurationMinutes": 5,
    "MaxConcurrentOperations": 10
  }
}